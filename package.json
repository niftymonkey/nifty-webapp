{
  "name": "nifty-webapp",
  "private": true,
  "version": "0.2.0",
  "description": "How about we get right down to building an app, with zero upfront tooling bullshit cost?",
  "scripts": {
    "copyfiles": "shx cp ./src/index.html ./dist",
    "clean": "shx rm -rf ./dist",
    "build": "webpack && npm run copyfiles",
    "wds": "webpack-dev-server --port 3000 --content-base ./dist",
    "start": "npm run clean && npm run build && npm run wds",
    "buildlog": "npm run build > current-build-output.txt"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:niftymonkey/nifty-webapp.git"
  },
  "keywords": [],
  "author": "Mark Lozano <mark.d.lozano@gmail.com>",
  "devDependencies": {
    "autoprefixer-loader": "^3.2.0",
    "babel-core": "^6.7.7",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "css-loader": "^0.23.1",
    "file-loader": "^0.8.5",
    "shx": "^0.1.1",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {}
}
